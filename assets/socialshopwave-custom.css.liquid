#widget-fave-html {
  width: 100%;
  display: flex;
}

.ssw-fave-btn.ssw-faveappbtn.ssw-faveappbtn-counter.ssw-faveappbtn2 {
  width: 100%;
  line-height: 44px !important;
  margin-top: 10px;
  border: 1px solid #e8e8e1;
  border-radius: 0px;
  transition: all 0.3s ease-out;
}

.ssw-fave-btn.ssw-faveappbtn.ssw-faveappbtn-counter.ssw-faveappbtn2 {
  margin-right: 0px;
}

.ssw-faveappbtn-counter::after {
  width: 40px !important;
  border-color: #e8e8e1;
  border-radius: 0px;
}

.ssw-fave-btn.ssw-faveappbtn.ssw-faveappbtn-counter.ssw-faveappbtn2:not([data-count="0"]) {
  width: calc(100% - 46px);
}

.ssw-fave-btn.ssw-faveappbtn.ssw-faveappbtn-counter.ssw-faveappbtn2:hover {
  border-color: #111;
}

.ssw-fave-page-side-bar {
  padding: 17px;
}

@media all and (max-width: 768px) {
  .ssw-fave-btn.ssw-faveappbtn.ssw-faveappbtn-counter.ssw-faveappbtn2:not([data-count="0"]) {
    width: calc(100% - 10.5%);
  }
  .ssw-fave-page-side-bar {
    padding: 10px;
  }
}


