{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% assign campaign_id = ssw-widget-share-links %}
{% if campaign_id %}
  <div class="ssw-widget-share-links-html-{{ campaign_id }}"
       id="ssw-widget-share-links-html-{{ campaign_id }}-{{ product.id }}" data-title="{% comment %}ly_code_replace_for_[ product.title|strip_html ]_begin{% endcomment %}{% include 'ly-title' with product %}{{ ly_translation|strip_html }}{% comment %}ly_code_replace_end{% endcomment %}"
       data-handle="{{ product.handle }}"
       data-images="{{ product.featured_image | product_img_url: lightbox_image_size }}"
       data-campaign-id="{{ campaign_id }}"></div>
{% else %}
  <div class="ssw-widget-share-links-html-{{ campaign_id }}" id="ssw-widget-share-links-html-{{ product.id }}"
       data-title="{% comment %}ly_code_replace_for_[ product.title|strip_html ]_begin{% endcomment %}{% include 'ly-title' with product %}{{ ly_translation|strip_html }}{% comment %}ly_code_replace_end{% endcomment %}" data-handle="{{ product.handle }}"
       data-images="{{ product.featured_image | product_img_url: lightbox_image_size }}"></div>
{% endif %}
<script type="text/javascript" defer>
  (function () {
    var _sswAddEventListener = window.addEventListener;
    if(typeof sswAddEventListener === 'function'){
      _sswAddEventListener = sswAddEventListener;
    }
    _sswAddEventListener('sswsharingjsloaded', function () {
      var callback;
      var campaign_id = {% if campaign_id %}{{ campaign_id }}{% else %}0{% endif %};
      callback = function (ssw) {
        if (campaign_id && ssw.usercheckResponse.sharing && ssw.usercheckResponse.sharing.campaign_ids && ssw.usercheckResponse.sharing.campaign_ids.indexOf(campaign_id) !== -1) {
          var ogimg = ssw("meta[property='og:image:secure_url']").attr("content");
          if (!ogimg || ogimg.length <= 0) {
            ogimg = ssw('img')[0].src;
          }
          sswLoadCampaignShareLinks(campaign_id, ssw.usercheckResponse.sharing.campaigns[ssw.usercheckResponse.sharing.campaign_ids.indexOf(campaign_id)].campaign_type, {
            product_id: '{{ product.id }}',
            handle: '{{  product.handle }}',
            location: location.pathname,
            ogimg: ogimg
          });
        }
      };
      sswUserChecked(callback);
    });
  })();
</script>