    $(this).show();
    $('.Product-content-2').show();
  } 
})

$("[data-brands-toggle]").each(function() {
  if ( $(this).attr("data-brands-toggle") === $("#product-vendor").text()) {
    $(this).show();
    $('.Product-content-3').show();
  } 
})



});


